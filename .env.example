# .env.example
# Copy this file to .env and fill in your actual values

# Application
APP_NAME=Docent AI Core API
APP_VERSION=0.1.0
DEBUG=false

# Server
HOST=0.0.0.0
PORT=8001

# Database (SQLite)
DATABASE_PATH=./data/docent.db
DATABASE_ECHO=false
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Image Upload
IMAGE_UPLOAD_PATH=./data/uploads

# Google Cloud Storage (Optional - for image storage)
# GCS_BUCKET_NAME=your-bucket-name
# GCS_PROJECT_ID=your-project-id
# GCS_CREDENTIALS_PATH=./credentials/gcs-key.json

# Gemini API
# GEMINI_API_KEY=your-api-key-here
# GEMINI_MODEL_NAME=gemini-3-flash-20250929

# Redis (Optional - for future scaling)
# REDIS_URL=redis://localhost:6379
# REDIS_ENABLED=false

# Logging
LOG_LEVEL=INFO

# Environment
ENV=development
